# DocFlow Environment Configuration
# Copy this file to .env and update with your values

# Application
TITLE=DocFlow API
DESCRIPTION=Document Management System API
DEBUG=False

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=NewStrongPassword_2025!
POSTGRES_DB=docflow
DATABASE_HOSTNAME=postgres
POSTGRES_PORT=5432

# JWT Configuration
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production-use-openssl-rand-hex-32
JWT_REFRESH_SECRET_KEY=your-super-secret-refresh-key-change-this-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MIN=30
REFRESH_TOKEN_EXPIRE_MIN=1440

# MinIO/S3 Configuration
AWS_ACCESS_KEY_ID=minioadmin
AWS_SECRET_ACCESS_KEY=minioadmin
AWS_REGION=us-east-1
S3_ENDPOINT_URL=http://minio:9000
S3_BUCKET=docflow
S3_TEST_BUCKET=docflow-test

# Email Configuration (Optional - for sending documents via email)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
EMAIL=your-email@gmail.com
APP_PASSWORD=your-gmail-app-password
